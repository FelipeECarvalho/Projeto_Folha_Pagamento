@model Modelo.Acesso

@{
    ViewData["Title"] = "Acessar";
}

@Html.Hidden("msgValidacao", (string)ViewBag.Mensagem)

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />

    <title>Acessar</title>
</head>

<body class="bg-body-secondary d-flex align-items-center" style="height: 100vh;"> 
    <div class="container" style="height: 80vh;">
    
        <div class="row d-flex h-100">
    
            <div class="col-md-6 bg-white d-flex justify-content-center align-items-center">
                @using (Html.BeginForm("Acessar", "Acesso", FormMethod.Get, new { @class = "d-flex flex-column align-items-center w-50", @id = "form", @novalidate = true }))
                {
                    <h1 class="mb-3">Login</h1>

                    <div class="mb-3 w-100">
                        @Html.LabelFor(x => x.Usuario, "Usuario", new { @class = "form-label" })
                        @Html.TextBoxFor(x => x.Usuario, new { @class = "form-control", @required = "required" })
                        <div class="small text-danger"></div>
                    </div>

                    <div class="mb-4 w-100">
                        @Html.LabelFor(x => x.SenhaOriginal, "Senha", new { @class = "form-label" })
                        @Html.TextBoxFor(x => x.SenhaOriginal, new { @class = "form-control", @type = "password", @required = "required" })
                        <div class="small text-danger"></div>
                    </div>
                    <button type="submit" class="btn btn-primary mb-3 w-100 btn-lg">Acessar</button>
                }
            </div>
    
            <div class="col-6 bg-body-tertiary d-none d-md-flex d-flex justify-content-center align-items-center">
                <img src="~/img/logo.png" alt="logo empresa" class="img-fluid p-5">
            </div>
        </div>
    </div>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/index.js" asp-append-version="true"></script>
</body>
</html>

<div class="toast align-items-center text-white bg-danger bg-gradient bg-opacity-75 border-0 p-3 bottom-0 start-50 translate-middle-x" style="position: absolute;" id="mensagem-validacao" role="alert" aria-live="assertive" aria-atomic="true" autohide="true">
    <div class="d-flex">
        <div class="toast-body">
            @ViewBag.Mensagem
        </div>
    </div>
</div>