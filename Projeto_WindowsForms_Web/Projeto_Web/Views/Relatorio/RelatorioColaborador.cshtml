@model Projeto_Web.ViewModel.RelatorioViewModel

@{
    Layout = "_Layout";
}

<div class="container bg-body-tertiary mt-5 p-5 rounded-3" style="max-height: 70vh;">
    <form class="d-flex mb-3" role="search" id="form">
        <input class="form-control me-2" type="search" placeholder="Filtrar tabela..." aria-label="Search" id="inputFiltro">
        <button class="btn btn-outline-success" id="btnFiltrar" type="button">Filtrar</button>
    </form>

    <h1 class="fw-normal h6">Relatórios de colaboradores</h1>

    <div class="table-responsive" style="max-height: 50vh; overflow-y: auto;">
        <table class="table table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Nome</th>
                    <th>Empresa</th>
                    <th>Cargo</th>
                    <th>Sálario</th>
                    <th>Data de admissão</th>
                </tr>
            </thead>
            <tbody id="tabelaRelatorios">
                @foreach(var colaborador in Model.Colaboradores)
                {
                    <tr>
                        <td>@colaborador.Id</td>
                        <td>@colaborador.NomeCompleto</td>
                        <td>@colaborador.Empresa.NomeFantasia</td>
                        <td>@colaborador.Cargo.ToString()</td>
                        <td>@colaborador.Salario.ToString("c")</td>
                        <td>@colaborador.DataAdmissao.ToString("dd/MM/yyyy")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>